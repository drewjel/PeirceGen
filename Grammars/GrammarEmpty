Base
{
    Discard:
    {
        ExprWithCleanups,
        MaterializeTemporaryExpr,
        CXXBindTemporaryExpr
    }
    Capture:
    {
        ParenExpr:&.PAREN,
        DeclRefExpr:&.REF
    }
}


