_STMT := 
	+ASSIGN | 
	+DECLARE | 
	+EXPR |
	+IFCOND |
	_STMT _STMT

+IFCOND :=
	+EXPR _STMT |
	+EXPR _STMT +IFCOND |
	+EXPR _STMT _STMT
	

+ASSIGN := 
	()~(EQ +SCALAR_VAR +SCALAR_EXPR) | 
	()~(EQ +VEC_VAR +VEC_EXPR) | 
	()~(EQ +TRANSFORM_VAR +TRANSFORM_EXPR) |
	()~(EQ +POINT_VAR +POINT_EXPR) |
	()~(EQ +QUATERNION_VAR +QUATERNION_EXPR) |
	()~(EQ +MATRIX_VAR +MATRIX_EXPR) |
	()~(EQ +ANGLE_VAR +ANGLE_EXPR) 

+DECLARE :=
	()~(DECL +SCALAR_VAR = +SCALAR_EXPR) |
	()~(DECL +VEC_VAR = +VEC_EXPR) | 
	()~(DECL +TRANSFORM_VAR = +TRANSFORM_EXPR) |
	()~(DECL +POINT_VAR = +POINT_EXPR) |
	()~(DECL +QUATERNION_VAR = +QUATERNION_EXPR) |
	()~(DECL +MATRIX_VAR = +MATRIX_EXPR) | 
	()~(DECL +ANGLE_VAR = +ANGLE_EXPR)

+EXPR :=
	+SCALAR_EXPR |
	+VEC_EXPR |
	+TRANSFORM_EXPR | 
	+POINT_EXPR | 
	+QUATERNION_EXPR |
	+MATRIX_EXPR |
	+ANGLE_EXPR

+SCALAR_EXPR := 
	PAREN +SCALAR_EXPR |
	INV +SCALAR_EXPR |
	NEG +SCALAR_EXPR |
	ADD +SCALAR_EXPR +SCALAR_EXPR | 
	MUL +SCALAR_EXPR +SCALAR_EXPR | 
	+SCALAR_VAR | 
	+SCALAR_LITERAL

+VEC_EXPR := 
	PAREN +VEC_EXPR | 
	ADD +VEC_EXPR +VEC_EXPR | 
	SUB POINT_EXPR +POINT_EXPR |
	MUL +VEC_EXPR +SCALAR_EXPR | 
	APPLY +TRANSFORM_EXPR +VEC_EXPR | 
	+VEC_VAR | 
	+VEC_LITERAL

+TRANSFORM_EXPR := 
	PAREN +TRANSFORM_EXPR | 
	COMPOSE +TRANSFORM_EXPR +TRANSFORM_EXPR | 
	+TRANSFORM_VAR | 
	+TRANSFORM_LITERAL

+POINT_EXPR :=
	PAREN +POINT_EXPR |
	ADD +POINT_EXPR +VEC_EXPR |
	MUL +SCALAR_EXPR +POINT_EXPR

+QUATERNION_EXPR :=
	PAREN +QUATERNION_EXPR |
	MUL +QUATERNION_EXPR |
	+QUATERNION_VAR |
	+QUATERNION_LITERAL 

+MATRIX_EXPR :=
	PAREN +MATRIX_EXPR |
	MUL +MATRIX_EXPR +MATRIX_EXPR |
	MATRIX_VAR |
	MATRIX_LITERAL 

+ANGLE_EXPR :=
	PAREN +ANGLE_EXPR |
	ATAN + SCALAR_EXPR
	ANGLE_VAR |
	ANGLE_LITERAL



+SCALAR_VAR := IDENT
+VEC_VAR := IDENT
+TRANSFORM_VAR := IDENT
+POINT_VAR := IDENT
+QUATERNION_VAR := IDENT
+MATRIX_VAR := IDENT
+ANGLE_VAR := IDENT


+SCALAR_LITERAL := 
	Float
+VEC_LITERAL := 
	+SCALAR_EXPR +SCALAR_EXPR +SCALAR_EXPR
+TRANSFORM_LITERAL := 
	+VEC_EXPR +VEC_EXPR +VEC_EXPR | 
	+SCALAR_EXPR +SCALAR_EXPR +SCALAR_EXPR +SCALAR_EXPR +SCALAR_EXPR +SCALAR_EXPR +SCALAR_EXPR +SCALAR_EXPR +SCALAR_EXPR
+QUATERNION_LITERAL := 
	+SCALAR_EXPR +SCALAR_EXPR +SCALAR_EXPR +SCALAR_EXPR |
	+ANGLE_EXPR +ANGLE_EXPR +ANGLE_EXPR
+POINT_LITERAL := 
	+SCALAR_EXPR +SCALAR_EXPR +SCALAR_EXPR
+MATRIX_LITERAL := 
	+VEC_EXPR +VEC_EXPR +VEC_EXPR | 
	+SCALAR_EXPR +SCALAR_EXPR +SCALAR_EXPR +SCALAR_EXPR +SCALAR_EXPR +SCALAR_EXPR +SCALAR_EXPR +SCALAR_EXPR +SCALAR_EXPR
